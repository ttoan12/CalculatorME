<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeedFragment">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLengthValue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/spLengthUnit">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:inputType="numberDecimal"
                android:paddingTop="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spLengthUnit"
            style="@android:style/Widget.Holo.Spinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/btConvert"
            android:paddingRight="100dp" />

        <Button
            android:id="@+id/btConvert"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLengthValue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:background="#0183FC"
            android:text="@string/converter_convertBtn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="400dp"
        android:layout_height="15dp"
        android:text="feet"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/txtMm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:layout_width="398dp"
        android:layout_height="14dp"
        android:text="inches"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="290dp" />

    <TextView
        android:id="@+id/txtFeet"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="313dp" />

    <TextView
        android:layout_width="398dp"
        android:layout_height="14dp"
        android:text="milimetters"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="439dp" />

    <TextView
        android:id="@+id/txtCm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="465dp" />

    <TextView
        android:layout_width="398dp"
        android:layout_height="14dp"
        android:text="centimeters"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="515dp" />

    <TextView
        android:id="@+id/txtM"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="544dp" />


    <TextView
        android:layout_width="398dp"
        android:layout_height="14dp"
        android:text="meters"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="594dp" />

    <TextView
        android:id="@+id/txtkm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="619dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="15dp"
        android:text="kilometer "
        android:textSize="12sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="669dp" />

    <TextView
        android:id="@+id/txtInches"
        android:layout_width="400dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="238dp" />



</androidx.constraintlayout.widget.ConstraintLayout>