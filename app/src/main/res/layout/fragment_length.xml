<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor"
    tools:context=".LengthFragment">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spUnit"
            style="@android:style/Widget.Material.Light.Spinner.Underlined"
            android:layout_width="101dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/txtValue" />

        <Button
            android:id="@+id/btConvert"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtValue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/converter_convertBtn"
            android:background="@drawable/btn_shape_round"
            android:textColor="#0183FC"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btConvert"
            android:hint="0"
            android:paddingTop="40dp"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtFeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:hint="0"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtMm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:layout_alignParentStart="true"
            android:hint="0"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtCm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"
            android:hint="0"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t4"
            android:hint="0"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t5"
            android:hint="0"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtInches"
            android:text="Inches" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFeet"
            android:text="Feet" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMm"
            android:text="Millimeters" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCm"
            android:text="Centimeters" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtM"
            android:text="Meters" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtKm"
            android:text="Kilometers" />




    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t6"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:backgroundTint="@color/floattingButton"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>